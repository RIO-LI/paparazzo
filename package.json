    "karma-coverage-istanbul-reporter": "^0.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-remap-istanbul": "^0.6.0",
    "karma-webpack": "^2.0.2",
    "phantomjs-prebuilt": "^2.1.14",
    "ts-loader": "^2.0.1",
    "tslint": "^4.5.1",
    "tslint-loader": "^3.5.2",
    "typescript": "^2.2.1",
    "webpack": "^2.3.3",
    "chai": "^3.5.0",
    "karma-sinon-chai": "^1.3.1",
    "karma-mocha": "^1.3.0",
    "mocha": "^3.2.0",
    "sinon": "^2.1.0",
