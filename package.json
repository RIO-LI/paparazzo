{
  "name": "paparazzo",
  "files": [
    "lib/"
  ],
  "main": "lib/paparazzo.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build:dev": "webpack",
    "build:prod": "webpack --env=production",
